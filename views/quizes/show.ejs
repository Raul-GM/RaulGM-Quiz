<form action="/quizes/<%= quiz.id %>/answer" method="get">
	<div class="card big">
		<h1>Pregunta:</h1> 
		<p><%= quiz.pregunta %></p>
		<div class="inputs">
			<input type="text" name="respuesta" placeholder="Responda aquÃ­" class="mdText dark"/>
			<input type="submit" value="Enviar" class="mdFlatButton"/>
		</div>
		<div>
			<a href="/quizes" class="mdFlatButton">Cancelar</a>	
		</div>
		<p class="hashtag">#<%= quiz.tema %></p>
		<div class="comments">
			<p><a href="/quizes/<%= quiz.id %>/comments/new" class="mdFlatButton">Nuevo comentario</a></p>
			<h1>Comentarios:</h1>
			<% for(index in quiz.Comments){ %>
				<% if(quiz.Comments[index].publicado || session.user){ %>
					<p>- <%= quiz.Comments[index].texto %></p>
					<% if(!quiz.Comments[index].publicado && session.user){ %>
						<a href="/quizes/<%= quiz.id %>/comments/<%= quiz.Comments[index].id %>/publish" class="mdFlatButton"> Publicar</a>
					<% } %>	
				<% } %>
			<% } %>
		</div>
	</div>
</form>
